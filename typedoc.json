{
  "entryPoints": ["src/index.ts"],
  "out": "docs/api", // folder for generated files
  "plugin": ["typedoc-plugin-markdown"],
  "readme": "none", // don’t graft README.md
  "excludePrivate": true,
  "hideBreadcrumbs": true,
  "includeVersion": true,
  // –– single-file output ––––––––––––––––––––––––––––
  "router": "module", // or: "module", or default multipage

  "hidePageTitle": true,

  /* nicer code blocks like lodash.com */
  "useCodeBlocks": true,

  /* compact indexes – list instead of tables */
  "indexFormat": "list",

  /* keep your @example blocks right after the summary text */
  "blockTagsPreserveOrder": ["@example"],
  "parametersFormat": "table",
  "propertiesFormat": "table",
  "typeDeclarationFormat": "table"
}
