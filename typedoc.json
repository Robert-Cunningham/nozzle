{
  "entryPoints": ["src/index.ts"],
  "out": ".", // folder for generated files
  "plugin": [
    "typedoc-plugin-markdown",
    "./scripts/typedoc-theme-example-first.mjs"
  ],
  "readme": "Preamble.md",
  "mergeReadme": true,
  "excludePrivate": true,
  "hideBreadcrumbs": true,
  "includeVersion": true,
  "cleanOutputDir": false,
  // –– single-file output ––––––––––––––––––––––––––––
  "router": "module", // or: "module", or default multipage

  "hidePageTitle": true,
  "hidePageHeader": true,

  /* nicer code blocks like lodash.com */
  "useCodeBlocks": true,
  "disableSources": true,
  "theme": "example-first",
  /* compact indexes – list instead of tables */
  "indexFormat": "list",

  /* keep your @example blocks right after the summary text */
  "blockTagsPreserveOrder": ["@example"],
  "expandParameters": true,
  "parametersFormat": "table",
  "propertiesFormat": "table",
  "typeDeclarationFormat": "table"
}
